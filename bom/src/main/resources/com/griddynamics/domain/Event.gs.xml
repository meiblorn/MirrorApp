<!--
    XML Metadata mapping for GigaSpaces POJO classes.
-->
<gigaspaces-mapping>

    <!--
        Mapping for com.griddynamics.domain.Event class.
        Objects can be replicated when using "replicated" space topology.
        TODO: Complete doc
